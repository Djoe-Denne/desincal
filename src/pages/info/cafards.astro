---
import Layout from '../../layouts/Layout.astro';
import PricingSection from '../../components/PricingSection';
import servicesData from '../../data/services.json';

const cafardServices = servicesData.themes
  .find(theme => theme.id === 'desinsectisation')
  ?.services.map(service => ({
    title: service.subtitle,
    price: service.price,
    features: service.features,
    duration: service.duration,
    serviceId: service.id
  })) || [];

const pricingOptions = {
  title: "Tarifs et Prestations",
  subtitle: "Ces tarifs s'appliquent aux infestations standards. Une évaluation sur place peut être nécessaire pour les cas sévères.",
  options: cafardServices,
  note: "* Les tarifs peuvent varier selon l'éloignement et le niveau d'infestation"
};

const title = "Désinsectisation Cafards à Béziers | Traitement Anti-Blattes | Desincal";
const description = "Service professionnel de désinsectisation des cafards à Béziers et dans l'Hérault. Traitement efficace et durable contre les blattes. Intervention rapide, devis gratuit.";
const type = "article";
const canonicalUrl = "https://desincal.fr/info/cafards";
---

<Layout 
  title={title}
  description={description}
  type={type}
  canonicalUrl={canonicalUrl}
>
  <main class="pt-24 pb-16">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="bg-gradient-to-r from-pest-dark to-pest-dark/90 text-white rounded-2xl p-8 mb-12">
          <h1 class="text-4xl font-bold mb-4">Traitement Anti-Cafards</h1>
          <p class="text-xl text-white/90">Élimination efficace et durable des blattes</p>
        </div>

        <div class="prose max-w-none">
          <div class="bg-red-50 border-l-4 border-red-500 p-6 rounded-r-lg mb-8">
            <h2 class="text-red-700 text-xl font-bold mb-2">⚠️ Risque sanitaire</h2>
            <p class="text-red-600">Les cafards peuvent contaminer vos aliments et propager des maladies. Une intervention rapide est essentielle pour protéger votre santé.</p>
          </div>

          <img src="/cafard/cafards-cuisine-infestation-traitement-beziers.jpg" 
               alt="Cafards dans une cuisine - Traitement professionnel à Béziers" 
               class="w-full rounded-lg mb-8" />

          <PricingSection 
            title={pricingOptions.title}
            subtitle={pricingOptions.subtitle}
            options={pricingOptions.options}
            note={pricingOptions.note}
            client:load
          />

          <div class="bg-white rounded-xl shadow-lg p-6 border border-gray-100 mb-12">
            <h2 class="text-2xl font-bold text-pest-dark mb-6">Reconnaître une infestation</h2>
            
            <img src="/cafard/signes-infestation-cafards-traces-excrement.jpg" 
                 alt="Traces d'excréments de cafards - Signes d'infestation" 
                 class="w-full rounded-lg mb-6" />
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div class="space-y-4">
                <div class="flex items-start space-x-3">
                  <div class="bg-red-500 rounded-full p-2 mt-1">
                    <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path strokeLinecap="round" strokeLinejoin="round" strokeWidth="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                    </svg>
                  </div>
                  <div>
                    <h3 class="font-semibold text-pest-dark">Présence nocturne</h3>
                    <p class="text-sm text-gray-600">Activité principalement la nuit dans les zones humides</p>
                  </div>
                </div>
                <div class="flex items-start space-x-3">
                  <div class="bg-red-500 rounded-full p-2 mt-1">
                    <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path strokeLinecap="round" strokeLinejoin="round" strokeWidth="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                    </svg>
                  </div>
                  <div>
                    <h3 class="font-semibold text-pest-dark">Déjections</h3>
                    <p class="text-sm text-gray-600">Ressemblant à du café moulu dans les coins</p>
                  </div>
                </div>
              </div>
              <div class="space-y-4">
                <div class="flex items-start space-x-3">
                  <div class="bg-red-500 rounded-full p-2 mt-1">
                    <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path strokeLinecap="round" strokeLinejoin="round" strokeWidth="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                    </svg>
                  </div>
                  <div>
                    <h3 class="font-semibold text-pest-dark">Odeur caractéristique</h3>
                    <p class="text-sm text-gray-600">Une odeur désagréable et persistante</p>
                  </div>
                </div>
                <div class="flex items-start space-x-3">
                  <div class="bg-red-500 rounded-full p-2 mt-1">
                    <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path strokeLinecap="round" strokeLinejoin="round" strokeWidth="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                    </svg>
                  </div>
                  <div>
                    <h3 class="font-semibold text-pest-dark">Traces de passage</h3>
                    <p class="text-sm text-gray-600">Marques sombres sur les murs et plinthes</p>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="bg-blue-50 rounded-xl p-6 mb-12">
            <h2 class="text-xl font-bold text-pest-dark mb-4">Pourquoi agir rapidement ?</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div class="space-y-3">
                <div class="flex items-start space-x-2">
                  <svg class="w-5 h-5 text-blue-500 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path strokeLinecap="round" strokeLinejoin="round" strokeWidth="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  <span>Reproduction rapide des cafards</span>
                </div>
                <div class="flex items-start space-x-2">
                  <svg class="w-5 h-5 text-blue-500 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path strokeLinecap="round" strokeLinejoin="round" strokeWidth="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  <span>Risques de contamination alimentaire</span>
                </div>
              </div>
              <div class="space-y-3">
                <div class="flex items-start space-x-2">
                  <svg class="w-5 h-5 text-blue-500 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path strokeLinecap="round" strokeLinejoin="round" strokeWidth="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  <span>Propagation de maladies</span>
                </div>
                <div class="flex items-start space-x-2">
                  <svg class="w-5 h-5 text-blue-500 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path strokeLinecap="round" strokeLinejoin="round" strokeWidth="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  <span>Aggravation de l'infestation</span>
                </div>
              </div>
            </div>
          </div>

          <div class="bg-pest-dark text-white rounded-xl p-8 text-center">
            <h2 class="text-2xl font-bold mb-4">Besoin d'une intervention rapide ?</h2>
            <p class="mb-6">Nos experts sont à votre disposition pour éliminer efficacement les cafards</p>
            <a href="/?theme=desinsectisation#services" class="inline-block bg-pest-green text-white px-8 py-3 rounded-lg font-semibold hover:bg-opacity-90 transition-colors">
              Demandez votre devis
            </a>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>

<script>
  // Handle pricing card clicks to set both theme and service
  document.addEventListener('DOMContentLoaded', () => {
    const pricingCards = document.querySelectorAll('[data-service-id]');
    pricingCards.forEach(card => {
      card.addEventListener('click', (e) => {
        const serviceId = (e.currentTarget as HTMLElement).dataset.serviceId;
        window.location.href = `/?theme=desinsectisation&service=${serviceId}#contact`;
      });
    });
  });
</script>