---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero';
import Services from '../components/Services';
import About from '../components/About';
import ContactForm from '../components/ContactForm';
---

<Layout title="Desincal - Professional Pest Control Services">
  <main>
    <Hero client:load />
    <About client:load />
    <Services client:load />
    <ContactForm client:load />
  </main>
</Layout>

<script>
  // Function to scroll to contact form if service parameter is present
  function scrollToContactForm() {
    const params = new URLSearchParams(window.location.hash.split('?')[1]);
    const serviceId = params.get('service');
    
    if (serviceId) {
      const contactForm = document.getElementById('contact');
      if (contactForm) {
        // Add a small delay to ensure the form is fully loaded
        setTimeout(() => {
          contactForm.scrollIntoView({ behavior: 'smooth' });
        }, 100);
      }
    }
  }

  // Run on initial load
  scrollToContactForm();

  // Also run when hash changes (in case of navigation within the page)
  window.addEventListener('hashchange', scrollToContactForm);
</script>

<style>
  main {
    width: 100%;
  }
</style>
</boltArtifact>
